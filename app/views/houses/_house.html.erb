<div id="<%= dom_id house %>">

  <%= link_to house do %>
    <% if house.photo.attached? %>
      <%= cl_image_tag house.photo.key, class: "img-card"%>
    <% end %>
  <% end %>
  <div class="card-trip-infos">
    <p>
      <%= house.name %>
    </p>

    <p>
      <%= house.location %>
    </p>


    <p>
      <strong>Guests:</strong>
      <%= house.guests %>
    </p>

    <p>
      <strong>Price:</strong>
      <%= house.price %>
    </p>

    <p>
      <strong>Owner:</strong>
      <%= house.user.email %>
    </p>
    <p>
      <strong>Followers:</strong>
      <%= house.follows.count %>
    </p>
    <% follow =  current_user.follows.find_by(house: house) %>
    <% if follow.nil? %>
      <%= button_to "Follow", follows_path, params: { follow: {house_id: house.id}}, method: :post %>
    <% else %>
      <%= button_to "Unfollow", follow_path(follow), method: :delete %>
    <% end %>
  </div>
</div>
